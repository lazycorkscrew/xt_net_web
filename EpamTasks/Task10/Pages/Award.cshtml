@using EpamTasks.Entities;
@using EpamTasks.PL;

@{
    Layout = null;
    int id;

    if (int.TryParse(Request["id"], out id))
    {
        try
        {
            <img src="~/Commands/Image?award_id=@id"/>
            @LogicProvider.UserLogic.GetAwardById(id).Title;
            <div><a href="~/Commands/RemoveAward?award_id=@id">Удалить награду</a></div>

        }
        catch (KeyNotFoundException)
        {
            @("Награда не найдена.")
        }
    }
    else
    {
        @("Пожалуйста, не надо играться с аргументами...")
    }
}
