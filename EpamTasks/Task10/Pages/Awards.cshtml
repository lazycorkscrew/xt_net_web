@using EpamTasks.Entities;
@using EpamTasks.PL;
@{
    Layout = null;

    string newAwardName = Request["newAwardName"];
    if(!string.IsNullOrEmpty(newAwardName))
    {
        LogicProvider.UserLogic.AddNewAward(newAwardName);
    }

    Dictionary<int, string> awards = LogicProvider.UserLogic.GetAwards();

    foreach(var award in awards)
    {
        <div><a href="~/?page=award&id=@award.Key">@($"{award.Key}, {award.Value}")</a></div>
    }
}

<form action="/?page=awards" method="post">
    <input type="text" name="newAwardName" />
    <button>Создать</button>
</form>
